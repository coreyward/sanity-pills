{
  "name": "sanity-pills",
  "description": "A collection of utilities and helpers for the Sanity.io Studio.",
  "version": "2.1.0-dev.1",
  "author": "Corey Ward <corey@hey.com>",
  "license": "MPL-2.0",
  "repository": "https://github.com/coreyward/sanity-pills",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "/dist"
  ],
  "sideEffects": false,
  "dependencies": {
    "slugify": "^1.4.6"
  },
  "peerDependencies": {
    "@sanity/types": "^3.30.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@sanity/types": "^3.36.2",
    "@size-limit/preset-small-lib": "^8.2.4",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import-x": "^4.15.2",
    "jiti": "^2.5.1",
    "prettier": "^3.5.3",
    "size-limit": "^8.2.4",
    "tsup": "^8.0.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prebuild": "tsc --noEmit",
    "build": "tsup",
    "prepublishOnly": "pnpm build",
    "size": "size-limit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.js",
      "limit": "15 KB"
    }
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.10.0"
}
